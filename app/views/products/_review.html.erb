<div class="well">
<tr>
  <td>
      <h2>Review By: <%= review.user.first_name %> <%= review.user.last_name %></h2>
  </td>

  <td>
    <h4><%= review.description %></h4>

    <br>
    <p>Rating: <%= review.rating %> out of 5</p>
    <% if current_user && current_user.id == review.user.id %>
    <h2><%= review.user.first_name %> - You wrote this review!</h2>
    <h5><%= link_to "Delete", [review.product, review], method: :delete, data: { confirm: 'Are you sure?'} %></h5>
    <% end %>
  </td>

</tr>
</div>
